{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-13 build active file",
            "command": "/opt/homebrew/bin/gcc-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/opt/homebrew/Cellar/raylib/5.0/include",
                "-L/opt/homebrew/Cellar/raylib/5.0/lib",
                "-lraylib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}